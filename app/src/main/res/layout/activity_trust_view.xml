<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#ffffff"
    tools:context="com.trust.demo.trusttool.activity.TrustViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.trust.viewlibrary.Flowlayoutsss
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/colorPrimary"
                android:text="asdasdasdasd" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/colorPrimary"
                android:text="啊是大" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/colorPrimary"
                android:text="asdasdasdasd按时大苏打" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/colorPrimary"
                android:text="asdasdasdasd飒飒大苏打实打实大苏打" />


            <com.trust.viewlibrary.TrustPaintView
                android:layout_width="230dp"
                android:layout_height="330dp" />

            <com.trust.viewlibrary.TrustNeonView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018/6/20 14：00 大雨  温度22℃ 星期三  正在学习Paint基础操作api"
                android:textColor="#666666" />


            <com.trust.viewlibrary.TrustZommImageView
                android:layout_width="250dp"
                android:layout_height="250dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="这是一个测试" />


            <com.trust.viewlibrary.TrustRenderingView
                android:layout_width="200dp"
                android:layout_height="500dp" />


            <com.trust.viewlibrary.TrustPainXfermode
                android:layout_width="match_parent"
                android:layout_height="150dp" />


            <com.trust.demo.trusttool.TestPaintView
                android:layout_width="match_parent"
                android:layout_height="230dp" />

        </com.trust.viewlibrary.Flowlayoutsss>
    </LinearLayout>

</ScrollView>
